{
    public static class Win32Metadata
    {
        public const string WinMdPath = @"$(PkgMicrosoft_Windows_SDK_Win32Metadata)"%3B
    }
}]]>
      </Win32MetadataCSharp>
    </PropertyGroup>

    <WriteLinesToFile File="$(ProjectDir)Win32Metadata.cs" Overwrite="true" Lines="$(Win32MetadataCSharp)" />
  </Target>

</Project>
